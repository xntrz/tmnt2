    <PropertyGroup>
        <SourcePath>..\..\..\src</SourcePath>
        <ProjDir>$([System.IO.Path]::GetDirectoryName('$(MSBuildProjectFullPath)'))</ProjDir>
        
        <SourceDir>$([System.IO.Path]::Combine($(ProjDir), $(SourcePath)))</SourceDir>
        <SourceDir>$([System.IO.Path]::Combine($(SourceDir), ''))\</SourceDir>    
        
        <ExcludeDir>
            <!-- Example: $(SourceDir)System\**\*; -->
        </ExcludeDir>

        <PreprocessScript>../../../scripts/path2id/path2id.py</PreprocessScript>
        <PreprocessRuleNA>preproc_rule_na.txt</PreprocessRuleNA>
        <PreprocessRuleEU>preproc_rule_eu.txt</PreprocessRuleEU>

    </PropertyGroup>

</Project>